/**Laço de repetição - enquanto (while)
  Uso: Quando não sabemos quantas vezes repetir e a condição é testada antes de entrar no Laço
  */

programa {
  funcao inicio() {
    inteiro numero=-1
    enquanto(numero!=0){
      //laço 
      escreva("Digite um número (0 - para sair)")
      leia(numero)
    }
  }
}
